<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="85px"
            >

            <TextView
                android:id="@+id/textviewfinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Exam Details"
                android:textSize="80px"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginBottom="150px"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                     android:text="Subject Name :"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/edittext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#fff"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="Place :"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/edittext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#fff"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="No. of Questions :"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/edittext3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#fff"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#008577"
                    android:textColor="#fff"
                    android:text="Click here to enrolled in exam " />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4348154994055799/3533562857">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>