<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="100px"
        app:srcCompat="@drawable/waiting" />

    <TextView
        android:layout_marginTop="300px"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="80px" />

    <TextView
        android:layout_marginTop="700px"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Wait For Result"
        android:textColor="#000"
        android:textSize="60px" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600px"
        android:gravity="left"
        android:textColor="#000"
        android:textSize="60px" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600px"
        android:background="#fff"
        android:layout_marginLeft="360px"
        android:enabled="false"
        android:focusable="false"
        android:inputType="text"
        android:letterSpacing="0.1"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16dp" />


    <TextView
        android:layout_marginTop="730px"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#000"
        android:textSize="60px" />

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="730px"
        android:background="#fff"
        android:layout_marginLeft="360px"
        android:enabled="false"
        android:focusable="false"
        android:inputType="text"
        android:letterSpacing="0.1"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16dp" />

    <TextView
        android:layout_marginTop="860px"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#000"
        android:textSize="60px" />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="860px"
        android:background="#fff"
        android:layout_marginLeft="360px"
        android:enabled="false"
        android:focusable="false"
        android:inputType="text"
        android:letterSpacing="0.1"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16dp" />


</RelativeLayout>